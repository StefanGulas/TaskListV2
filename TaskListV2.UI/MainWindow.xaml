<Window x:Class="TaskListV2.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskListV2.UI"
        mc:Ignorable="d"
        Title="ToDoList" Height="600" Width="850" MinHeight="300" MinWidth="600" FontSize="20" WindowStyle="None" WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         TextElement.Foreground="{DynamicResource MaterialDesignBody}"
         TextElement.FontWeight="Regular"
         TextElement.FontSize="13"
         TextOptions.TextFormattingMode="Ideal"
         TextOptions.TextRenderingMode="Auto"
         FontFamily="./#Resources/Roboto"
         Background="{DynamicResource MaterialDesignPaper}">
    <!--FontFamily="{DynamicResource MaterialDesignFont}"> -->

    <Grid Background="CornflowerBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Frame -->

            <Grid Grid.Row="0" Margin="15,5,12,5">
                <StackPanel VerticalAlignment="Top" Margin="10,0" MouseDown="StackPanel_MouseDown">
                    <Grid>
                        <StackPanel Background="AliceBlue" HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="Task List" VerticalAlignment="Center" FontSize="16" FontFamily="Champagne &amp; Limousines" Margin="20 0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0">
                            <Button Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Foreground="Gray">
                                <materialDesign:PackIcon Kind="BellOutline" Foreground="{DynamicResource MaterialDesignPaper}"/>
                            </Button>
                            <Button Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Foreground="Gray" Margin="5 0 5 0">
                                <materialDesign:PackIcon Kind="Settings" Foreground="{DynamicResource MaterialDesignPaper}"/>
                            </Button>
                            <Button x:Name="ButtonFechar" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Foreground="Gray" Click="ButtonFechar_Click">
                                <materialDesign:PackIcon Kind="Power" Foreground="{DynamicResource MaterialDesignPaper}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                    </Grid>



                <!--GridColumnDefinitions-->
                <Grid Grid.Row="1" >
                    <Grid Margin="15,5,15,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!--MenuColumn-->
                            <ListView Grid.Column="0" Foreground="AntiqueWhite" Margin="0 15" materialDesign:ColorZoneAssist.Foreground="AntiqueWhite"  Background="AliceBlue" FontSize="14" ItemsSource="{Binding MenuItems}"
                  SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged}" />

                            <!--TaskColumn-->

                            <Grid Grid.Column="1" materialDesign:ColorZoneAssist.Background="Blue" >
                                <ScrollViewer Grid.Row="2" Opacity="1"           HorizontalScrollBarVisibility="Hidden">
                                    <ItemsControl Margin="15,5,15,0" x:Name="list" ItemsSource="{Binding Tasks}" >
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Background="White" Margin="5,5,5,5" HorizontalAlignment="Stretch" Height="40">

                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Margin="10,0" IsChecked="{Binding TaskComplete, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0"/>
                                                    <Grid Grid.Column="1" MinHeight="40">
                                                        <Grid VerticalAlignment="Center" MinHeight="20">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>
                                                            <TextBlock FontWeight="Bold" FontSize="14" Grid.Row="0" Text="{Binding TaskName}"/>
                                                            <Grid Margin="5,0" Grid.Row="1" HorizontalAlignment="Left" MinWidth="100">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Margin="5,0,20,0" Grid.Column="0" Text="{Binding TaskCategory}"/>
                                                                <TextBlock Grid.Column="1" Text="{Binding DueDate}"/>
                                                                <TextBlock Grid.Column="2" Text="{Binding DueDate}"/>
                                                            </Grid>
                                                        </Grid>
                                                    </Grid>
                                                    <CheckBox Grid.Column="2" IsChecked="{Binding IsImportant}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>


                                <!--<StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="47" Margin="25,5" Background="AliceBlue" Visibility="Visible">
                    <Grid Background="AliceBlue" Visibility="Visible" Cursor="Hand">
                        <Grid.Effect>
                            <DropShadowEffect/>
                        </Grid.Effect>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>-->
                                <!--<TextBox VerticalAlignment="Bottom" Margin="10" Grid.Column="0" Background="White" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" ToolTip="ToDo"
                          />
                        <ComboBox Name="TaskCategoryComboBox" Grid.Column="1" SelectedValue="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TaskCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignComboBox}"
                        ToolTip="ToDo-Liste auswählen">

                        </ComboBox>

                        <DatePicker Grid.Column="2" Margin="4 4" ToolTip="Fälligkeitsdatum hinzufügen">

                        </DatePicker>
                        <ComboBox Name="ReminderComboBox" Grid.Column="3" SelectedValue="{Binding Reminder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding ReminderList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignComboBox}"
                        ToolTip="Erinnerung">
                        </ComboBox>

                        <ComboBox Name="RepetitionComboBox" Grid.Column="4" SelectedValue="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TaskCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignComboBox}"
                        ToolTip="ToDo-Liste auswählen">

                        </ComboBox>

                        <Button Grid.Column="8"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="MaterialDesignFloatingActionMiniAccentButton">
                            <materialDesign:PackIcon
                            Kind="Alarm"/>
                        </Button>-->
                                <!--<Button x:Name="CreateTaskCommandButton" Command="{Binding CreateTaskCommand}" Background="AliceBlue" CommandParameter="{Binding}" Grid.Column="6" 
                         Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="ToDo hinzufügen" Click="PopUpDisappear_Click" Visibility="Visible" ClickMode="Press">
                            <materialDesign:PackIcon
                            Kind="Plus" Background="{DynamicResource PrimaryHueDarkForegroundBrush}"/>

                        </Button>-->
                                <Button VerticalAlignment="Bottom" HorizontalAlignment="Right"      x:Name="PopUpOpenButton" Background="#FF363636"  Grid.Column="6" 
                         Margin="0 0 25 15" Click="PopUpOpenButton_Click" 
                                Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="ToDo hinzufügen" >
                                    <materialDesign:PackIcon
                            Kind="Plus"/>

                                </Button>

                            </Grid>
                        </Grid>
                        <Grid x:Name="SlideGridAddTask" Grid.Column="1" >
                            <DockPanel Width="120" HorizontalAlignment="Right" Margin="10,10,0,13"  
                            VerticalAlignment="Top" >
                                <Grid Background="AliceBlue" Margin="5 0 5 5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBox VerticalAlignment="Bottom" Margin="0 10" Grid.Row="0" Background="White" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" ToolTip="ToDo"
                          />
                                    <ComboBox Name="TaskCategoryComboBox" Grid.Row="1" Margin="0 10" SelectedValue="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TaskCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignComboBox}"
                        ToolTip="ToDo-Liste auswählen">

                                    </ComboBox>

                                    <DatePicker Grid.Row="2" Margin="4 4" ToolTip="Fälligkeitsdatum hinzufügen">

                                    </DatePicker>
                                    <ComboBox Name="ReminderComboBox" Grid.Row="3" SelectedValue="{Binding Reminder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding ReminderList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignComboBox}"
                        ToolTip="Erinnerung">
                                    </ComboBox>

                                    <ComboBox Name="RepetitionComboBox" Grid.Row="4" SelectedValue="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding TaskCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignComboBox}"
                        ToolTip="ToDo-Liste auswählen">

                                    </ComboBox>
                            <Label Grid.Row="5" Background="AliceBlue" Margin="10"/>
                            <Button VerticalAlignment="Bottom" HorizontalAlignment="Right"      x:Name="CreateTaskButton" Background="#FF363636"  Grid.Row="6" 
                         Margin="0 0 25 15" Click="CreateTaskButton_Click"
                                Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="ToDo hinzufügen" Visibility="Visible">
                                <materialDesign:PackIcon
                            Kind="Plus"/>
                            </Button>
                        </Grid>
                            </DockPanel>

                        </Grid>
                        </Grid>
                        </Grid>
                        </Grid>
</Window>
